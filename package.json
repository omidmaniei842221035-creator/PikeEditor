{
  "name": "pos-monitoring-system",
  "version": "1.0.0",
  "description": "سامانه مانیتورینگ هوشمند پایانه‌های فروشگاهی",
  "main": "dist-electron/main.js",
  "type": "module",
  "license": "MIT",
  "author": {
    "name": "POS Monitoring Team",
    "email": "info@posmonitoring.ir"
  },
  "scripts": {
    "dev": "NODE_ENV=development tsx server/index.ts",
    "build": "vite build && esbuild server/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist",
    "start": "NODE_ENV=production node dist/index.js",
    "check": "tsc",
    "db:push": "drizzle-kit push",
    "electron:compile": "tsc -p electron/tsconfig.json",
    "electron:dev": "npm run electron:compile && cross-env NODE_ENV=development DATABASE_PATH=./dev-pos.db electron .",
    "electron:build": "npm run build && npm run electron:compile && electron-builder",
    "electron:build:win": "npm run build && npm run electron:compile && electron-builder --win --x64",
    "pack": "npm run build && npm run electron:compile && electron-builder --dir"
  },
  "build": {
    "appId": "com.posmonitoring.app",
    "productName": "سامانه مانیتورینگ POS",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "dist",
        "to": "server"
      }
    ],
    "asarUnpack": [
      "dist/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "artifactName": "${productName}-${version}-Setup.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "سامانه مانیتورینگ POS",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "installerLanguages": ["fa_IR", "en_US"],
      "perMachine": false,
      "allowElevation": true
    },
    "mac": {
      "target": ["dmg", "zip"],
      "category": "public.app-category.business"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Office"
    }
  },
